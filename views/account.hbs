<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Account Details</title>
  <style>
    /* General Styles */
    body { 
      font-family: Arial, sans-serif; 
      margin: 0; 
      padding: 0; 
      background-color: #f9f9f9; 
    }
    a { text-decoration: none; color: white; }
    h1, h2, h3 { color: #333; text-align: center; }

    /* Navbar Styles */
    nav {
      background-color: #007bff;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: white;
    }
    nav a {
      color: white;
      margin: 0 15px;
      font-size: 16px;
      transition: color 0.3s;
    }
    nav a:hover {
      color: #d1eaff;
    }

    /* Page Container */
    .container {
      max-width: 1000px;
      margin: 20px auto;
      padding: 20px;
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    /* Sections */
    .section {
      margin-bottom: 30px;
    }
    .section h2 {
      border-bottom: 2px solid #007bff;
      padding-bottom: 10px;
      margin-bottom: 15px;
      font-size: 1.5em;
    }

    /* List Styles */
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      background: #f2f2f2;
      margin: 10px 0;
      padding: 10px 15px;
      border-radius: 5px;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }
    li:nth-child(even) {
      background: #e6f7ff;
    }

    /* No Data Message */
    p {
      text-align: center;
      color: #777;
    }

    /* Buttons */
    .btn {
      display: inline-block;
      padding: 8px 12px;
      background-color: #007bff;
      color: white;
      border-radius: 5px;
      font-size: 14px;
      cursor: pointer;
      text-align: center;
      margin-top: 10px;
      transition: background-color 0.3s;
    }
    .btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav>
    <div>
      <a href="/book">Home</a>
      <a href="/account">View Account</a>
      <a href="/basket">Show Basket</a>
    </div>
    <div>Welcome, {{customerDetails.Name}}</div>
  </nav>

  <!-- Account Details Page -->
  <div class="container">
    <h1>Account Details</h1>

    <!-- Account Name -->
    <h3>Your Account Name: <strong>{{customerDetails.Name}}</strong></h3>

    <!-- Reservations -->
    <div class="section">
      <h2>Your Reservations</h2>
      {{#if reservations.length}}
        <ul>
          {{#each reservations}}
            <li>
              <strong>{{this.Title}}</strong> - Pickup Time: {{this.PickupTime}} - Status: <span>{{this.Status}}</span>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>You have no reservations.</p>
      {{/if}}
    </div>

    <!-- Purchases -->
    <div class="section">
      <h2>Your Purchases</h2>
      {{#if purchases.length}}
        <ul>
          {{#each purchases}}
            <li>
              <strong>{{this.Title}}</strong> - Purchased on: {{this.PurchaseDate}}
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>You have no purchases.</p>
      {{/if}}
    </div>

    <!-- Return to Books Button -->
    <div style="text-align: center;">
      <a href="/" class="btn">Browse Books</a>
    </div>
  </div>
</body>
</html>
